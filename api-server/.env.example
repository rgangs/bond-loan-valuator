# ============================================================================
# Bond & Loan Portfolio Valuator - Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# ============================================================================

# ============================================================================
# Database Configuration
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bondvaluator
DB_USER=postgres
DB_PASSWORD=yourpassword

# Connection Pool Settings
DB_POOL_MAX=20
DB_POOL_MIN=4
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_SSL=false

# ============================================================================
# JWT Authentication
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*

# ============================================================================
# Bloomberg PORT API (when ready)
# ============================================================================
BLOOMBERG_ENABLED=false
BLOOMBERG_API_KEY=
BLOOMBERG_API_SECRET=
BLOOMBERG_SERVER_URL=
BLOOMBERG_TIMEOUT=30000

# ============================================================================
# FX Rate API
# ============================================================================
FX_API_KEY=
FX_API_URL=https://api.exchangerate-api.com/v4/latest/
FX_API_PROVIDER=exchangerate-api

# ============================================================================
# Curve Data Configuration
# ============================================================================
CURVE_CACHE_TTL=3600
CURVE_DEFAULT_SOURCE=bloomberg
CURVE_FALLBACK_SOURCES=github,manual

# ============================================================================
# FRED Curve API (local testing)
# ============================================================================
FRED_API_ENABLED=false
FRED_API_BASE_URL=http://localhost:8000/api/v1
FRED_API_TIMEOUT=15000
FRED_API_MAX_POINTS=120
FRED_API_DEFAULT_CURRENCY=USD
FRED_API_SYNC_TTL_DAYS=1
# FRED_API_CURVE_MAP={"Custom_Curve":{"endpoint":"treasury","currency":"USD"}}
# FRED_API_CURVE_MAP_FILE=../config/fred.curve-map.json

# ============================================================================
# File Upload Settings
# ============================================================================
UPLOAD_DIR=./uploads
EXPORT_DIR=./exports
MAX_FILE_SIZE=10485760

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/api.log

# ============================================================================
# Rate Limiting (future)
# ============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Redis Cache (future)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_ENABLED=false
